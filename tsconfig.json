{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2017",
        "module": "CommonJS",
        "lib": [
            "ES2017",
            "ES7",
            "ES6"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true
    },
    "exclude": ["node_modules","dist"]
}